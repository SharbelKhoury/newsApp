{% block body %}
    <h1>Create News Entry</h1>
 <form method="post" action="{{ path('news_add') }}">
    {{ form_start(form, {'attr': {'data-turbo-action': 'replace', 'enctype': 'multipart/form-data'}}) }}
    
    <div class="form-group">
